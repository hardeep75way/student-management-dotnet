@model StudentManagement.DTO.StudentDTOs

@{
    var isTopper = Model.Marks >= 90;
    var rowStyle = isTopper
        ? "background-color:#dcfce7;"
        : "";
}

<tr style="@rowStyle">
    <td>@Model.Name</td>
    <td>@Model.Course</td>
    <td>@Model.Marks</td>
    <td>
        <a asp-action="Details"
           asp-controller="Students"
           asp-route-id="@Model.Id"
           style="
                padding:4px 10px;
                border:1px solid #2563eb;
                color:#2563eb;
                text-decoration:none;
                border-radius:4px;
                font-size:13px;
           ">
            View
        </a>
    </td>
</tr>